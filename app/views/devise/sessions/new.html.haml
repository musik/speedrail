.min-h-screen.flex.justify-center.py-12.px-4.sm:px-6.lg:px-8
  .max-w-md.w-full
    = render 'devise/shared/devise_heading', title: 'Log in to your account'
    = render "devise/shared/devise_sub_heading", subtitle: "Welcome back! Please enter your details."
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mt-8"}) do |f|
      = render "devise/shared/error_messages", resource: resource
      .mb-2
        %input#user_email.my-1.block.w-full.rounded-md.border-gray-300.shadow-sm.focus:border-primary-500.focus:ring.focus:ring-primary-500.focus:ring-opacity-50{"aria-label" => "Email address", :autofocus => "", :name => "user[email]", :placeholder => "Email address", :required => "", :type => "email"}/
      .mb-2
        %input#user_password.my-1.block.w-full.rounded-md.border-gray-300.shadow-sm.focus:border-primary-500.focus:ring.focus:ring-primary-500.focus:ring-opacity-50{"aria-label" => "Password", :name => "user[password]", :placeholder => "Password", :required => "", :type => "password"}/
      .mt-6.flex.items-center.justify-between
        .flex.items-center
          %input#user_remember_me.form-checkbox.h-4.w-4.transition.duration-150.ease-in-out.text-primary-700.focus:border-primary-300.focus:ring-primary-500.rounded{:name => "user[remember_me]", :type => "checkbox"}/
          %label.ml-2.block.text-sm.leading-5.text-gray-900{:for => "user_remember_me"}
            Remember Me
        .text-sm.leading-5
          = link_to 'Forgot password?', new_user_password_path, class: 'font-medium hover:text-gray-500 focus:outline-none focus:underline transition ease-in-out duration-150'
      .mt-6
        %button.group.relative.w-full.flex.justify-center.px-4.border.border-transparent.text-sm.leading-5.font-medium.rounded-md.text-white.bg-primary-600.hover:bg-primary-700.focus:outline-none{:class => "py-2.5", "data-turbo" => "false", :type => "submit"}
          %span.absolute.left-0.inset-y-0.flex.items-center.pl-3
            %svg.h-5.w-5.transition.ease-in-out.duration-150{:fill => "white", :viewbox => "0 0 20 20"}
              %path{"clip-rule" => "evenodd", :d => "M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z", "fill-rule" => "evenodd"}
          Login
    .mt-6.text-center.text-gray-400
      Don't have an account?
      \#{link_to 'Sign up', new_user_registration_path, class: 'font-medium text-gray-500 hover:text-gray-600 focus:outline-none focus:underline transition ease-in-out duration-150'}
