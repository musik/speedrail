.min-h-screen.flex.justify-center.py-12.px-4.sm:px-6.lg:px-8
  .max-w-md.w-full
    = render 'devise/shared/devise_heading', title: 'Sign up'
    = render "devise/shared/devise_sub_heading", subtitle: "Create your account."
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { honeypot: true, class: "mt-8" }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .mb-2
        - prefilled_email = params[:email].present? ? params[:email] : ''
        = succeed "value=\"" do
          %input#user_email{"aria-label" => "Email address", :name => "user[email]", :type => "email"}/
        = prefilled_email
        " class="my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50" placeholder="Email address" /&gt;
      .mb-2
        %input#user_password.my-1.block.w-full.rounded-md.border-gray-300.shadow-sm.focus:border-primary-500.focus:ring.focus:ring-primary-500.focus:ring-opacity-50{"aria-label" => "Password", :name => "user[password]", :placeholder => "Password", :type => "password"}/
        = autofocus if prefilled_email.present?
        \/&gt;
      .mt-6
        %button.group.relative.w-full.flex.justify-center.px-4.border.border-transparent.text-sm.leading-5.font-medium.rounded-md.text-white.bg-primary-600.hover:bg-primary-700.focus:outline-none{:class => "py-2.5", "data-turbo" => "false", :type => "submit"}
          %span.absolute.left-0.inset-y-0.flex.items-center.pl-3
            %svg.h-5.w-5.transition.ease-in-out.duration-150{:fill => "white", :viewBox => "0 0 20 20"}
              %path{"clip-rule" => "evenodd", :d => "M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z", "fill-rule" => "evenodd"}
          Sign up
    .mt-6.text-center.text-gray-400
      Already have an account?
      \#{link_to 'Log in', new_user_session_path, class: 'font-medium text-gray text-gray-500 hover:text-gray-600 focus:outline-none focus:underline transition ease-in-out duration-150'}
