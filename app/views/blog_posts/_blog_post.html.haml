%div{:id => "#{dom_id blog_post}"}
  %article.flex.flex-col.items-start.justify-between.hover:opacity-80.transition-opacity.duration-300.ease-in-out
    = link_to blog_post_path(blog_post) do
      .relative.w-full
        = image_tag blog_post.cover_image, class:"aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover" if blog_post.cover_image.attached?
        .absolute.inset-0.rounded-2xl.ring-1.ring-inset{:class => "ring-gray-900/10"}
      .w-full
        .text-xs.-mt-8.ml-auto.text-right.w-full{:class => "pr-2.5"}
          %time.relative.z-10.rounded-full.bg-gray-50.px-3.font-medium.text-gray-600.border{:class => "py-1.5", :datetime => "#{blog_post.updated_at.strftime('%m-%d-%Y')}"}= blog_post.created_at.strftime('%B %d, %Y')
        .group.relative
          %h2.mt-9.text-lg.font-semibold.leading-6.text-gray-900.group-hover:text-gray-600
            = blog_post.title
          %p.mt-3.line-clamp-3.text-sm.leading-6.text-gray-600= blog_post.description
